{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: start",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "isBackground": true,
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "ERROR in (.*)\\((\\d+),(\\d+)\\): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*http://localhost:4200.*"
        }
      }
    },
    {
      "label": "serve: development",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:shared"],
      "isBackground": false,
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "ng: serve development",
      "type": "shell",
      "command": "ng",
      "args": ["serve", "--configuration=development"],
      "isBackground": true,
      "group": "build",
      "dependsOn": "serve: development",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "ERROR in (.*)\\((\\d+),(\\d+)\\): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*http://localhost:4200.*"
        }
      }
    }
  ]
}
